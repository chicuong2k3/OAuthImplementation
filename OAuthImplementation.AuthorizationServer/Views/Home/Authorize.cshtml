@using OAuthImplementation.AuthorizationServer.Requests
@model ApproveRequest  

<h1>Approve this client?</h1>
<div>
    <span class="badge fw-bold text-black">Client Id</span>
    <span class="badge bg-danger">@Model.ClientId</span>
</div>

<div class="mt-3">
    <form asp-action="Approve" method="post">
        <input type="hidden" asp-for="ClientId" />
        <input type="hidden" asp-for="ResponseType" />
        <input type="hidden" asp-for="RedirectUri" />
        <input type="hidden" asp-for="Scope" />
        <button type="submit" class="btn btn-sm btn-success">Approve</button>
        <a href="/" class="btn btn-sm btn-danger">Deny</a>
    </form>
    
</div>